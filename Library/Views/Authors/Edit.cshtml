@model Library.Models.Author

@{
  Layout = "_Layout";
}

<div class="container">
    <div class="page-box">
        <h2 class="fancy-shadow page-header">Edit Author</h2>
        <div class="form-box">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.HiddenFor(model => model.AuthorId)
                    <label asp-for="AuthorFirstName"><h4>First Name</h4></label>
                    @Html.TextBoxFor(model => model.AuthorFirstName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.HiddenFor(model => model.AuthorId)
                    <label asp-for="AuthorLastName"><h4>Last Name</h4></label>
                    @Html.TextBoxFor(model => model.AuthorLastName, new { @class = "form-control" })
                </div>
                if (ViewBag.BookIds.Count != 0)
                {
                    <div class="form-group">
                        <label for="BooksIds"><h4>Books:</h4></label>
                        @Html.DropDownList("BookIds", null, new { multiple = "true", @class = "form-control" })
                    </div>
                }
                <input type="submit" value="Update" class="btn btn-md btn-default">
            }
        </div>
        <p>@Html.ActionLink("Back to List", "Index")</p>
    </div>
</div>