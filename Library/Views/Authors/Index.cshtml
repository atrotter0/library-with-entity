@model IEnumerable<Library.Models.Author>

@{
    ViewData["Title"] = "Library | Authors";
}

<div class="container">
    <div class="page-box">
        <h2 class="fancy-shadow page-header">Authors</h2>
        @Html.ActionLink("Add Author", "Create", "Authors", null, new { @class="btn btn-lg btn-info" })
        <div class="grid-container">
            @foreach(var author in Model)
            {
                <div class="grid-item">@Html.DisplayFor(modelItem => author.FirstName) @Html.DisplayFor(modelItem => author.LastName)</div>
                <div class="grid-item">@Html.ActionLink("Details", "Details", new { id = author.Id })</div>
                <div class="grid-item">@Html.ActionLink("Edit", "Edit", new { id = author.Id })</div>
                <div class="grid-item">
                    @using (Html.BeginForm("delete", "authors", new { id = author.Id }, FormMethod.Post))
                    {
                        <input type="submit" value="Delete" class="no-btn-styles"/>
                    }
                </div>
            }
        </div>
    </div>
</div>