@model Library.Models.Author

@{
    ViewData["Title"] = "Library | Add Author";
}

<div class="container">
    <div class="page-box">
        <h2 class="fancy-shadow page-header">Add Author</h2>
        <div class="form-box">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label asp-for="FirstName"><h4>First Name</h4></label>
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label asp-for="LastName"><h4>Last Name</h4></label>
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                </div>
                <input type="submit" value="Create Author" class="btn btn-lg btn-default">
            }
        </div>
        <p>@Html.ActionLink("Back to Author List", "Index")</p>
    </div>
</div>

