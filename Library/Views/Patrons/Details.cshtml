@using Library.Models
@model Library.Models.Patron

@{
  Layout = "_Layout";
}

<div class="container">
    <h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
    <h4>Currently Checked Out:</h4>
    <ul>
        @foreach (var book in ViewBag.BookList)
        {
            <li class="list-item">
                <form class="return-book-form" action="/patrons/@Model.PatronId/books/@book.BookId/return" method="POST">
                    <button type="submit" class="btn btn-info btn-md btn-return-book">Return Book</button>
                </form>
                @book.BookTitle
            </li>
        }
    </ul>
    <hr />
    <p>@Html.ActionLink("Back to Patron List", "Index")</p>
</div>