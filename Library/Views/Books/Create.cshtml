@model Library.Models.Book

@{
    ViewData["Title"] = "Library | Add Book";
}

<div class="container">
    <div class="page-box">
        <h2 class="fancy-shadow page-header">Add Book</h2>
        <div class="form-box">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <h4>@Html.LabelFor(model => model.Name)</h4>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>
                <input type="submit" value="Add Item" class="btn btn-lg btn-default">
            }
        </div>
        <p>@Html.ActionLink("Back to Book List", "Index")</p>
    </div>
</div>

