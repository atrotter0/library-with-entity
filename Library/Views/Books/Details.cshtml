@using Library.Models
@model Library.Models.Book

@{
  Layout = "_Layout";
}

<div class="container">
    <h2>@Html.DisplayFor(model => model.BookTitle)</h2>
    <h4>Authors:</h4>
    <ul>
        @foreach (var author in ViewBag.AuthorList)
        {
            <li><a href="/authors/@author.AuthorId">@author.AuthorFirstName @author.AuthorLastName</a></li>
        }
    </ul>
    <h4>Copies left: @ViewBag.CopiesCount</h4>
    <hr />
    <p>@Html.ActionLink("Back to Book List", "Index")</p>
</div>