@model IEnumerable<Library.Models.Book>

@{
    ViewData["Title"] = "Library | Books";
}

<div class="container">
    <div class="page-box">
        <h2 class="fancy-shadow page-header">List</h2>
        @Html.ActionLink("Add Book", "Create", "Books", null, new { @class="btn btn-lg btn-info" })
        <div class="grid-container">
            @foreach(var book in Model)
            {
                <div class="grid-item">@Html.DisplayFor(modelItem => book.Name)</div>
                <div class="grid-item">@Html.ActionLink("Details", "Details", new { id = book.Id })</div>
            }
        </div>
    </div>
</div>